
<div class="off-canvas-wrap" data-offcanvas>
  <div class="inner-wrap">
    <aside class="left-off-canvas-menu">
      
      <% if current_user %>  
      <!-- Off canvas profile partial -->
      <%= render "layouts/off_canvas_profile" %>
    <% end %> 
    </aside>

    <div class="wrapper">
      <div id="profile-button"><a class="left-off-canvas-toggle" href="#">&#9654;</a></div>  
        <div class="small-12 columns">

      <!-- other user partial-->
      <% if current_user != @user %>
      <div> <%= @user.username %> </div>
      <div> <%= @user.bio %> </div>
        <% if current_user.followed_users.include?(@user) %>
          <%= link_to 'Unfollow', user_follow_path(user_id: @user.id), method: :delete %>
        <% else %>
          <%= link_to 'Follow', user_follows_path(user_id: @user.id ), method: :post %> 
        <% end %>
      <% else %>
        <%= render "users/new_post_form" %>
      <% end %>
      <!-- posts partial -->
      <%= render "users/post_feed" %>  
     
      <div class="push"></div>
    
    </div>

    <a class="exit-off-canvas"></a>

  </div>
</div>